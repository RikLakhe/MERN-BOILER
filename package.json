{
  "name": "mern-boiler",
  "version": "1.0.0",
  "description": "A simple mern stack",
  "main": "index.js",
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "start": "node index.js",
    "build": "npm install && cd client && npm install && npm run build",
    "server": "concurrently \"nodemon index.js\" \"cd client && npm start\"",
    "prettier": "prettier --write ./*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RikLakhe/MERN-BOILER.git"
  },
  "author": "Rikesh Lal Shrestha",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/RikLakhe/MERN-BOILER/issues"
  },
  "homepage": "https://github.com/RikLakhe/MERN-BOILER#readme",
  "devDependencies": {
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2"
  },
  "dependencies": {
    "@sendgrid/mail": "^6.5.5",
    "concurrently": "^5.3.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "crypto-js": "^3.3.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^3.6.2",
    "mongoose": "^5.10.11",
    "morgan": "^1.10.0",
    "nodemailer": "^6.4.14",
    "path": "^0.12.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
