{
  "name": "mern-boiler",
  "version": "0.0.1",
  "description": "A simple mern stack",
  "main": "index.js",
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "start": "node index.js",
    "build": "npm install && cd client && npm install && npm run build",
    "server": "concurrently \"nodemon index.js\" \"cd client && npm start\"",
    "prettier": "prettier --write ./client/src/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RikLakhe/MERN-BOILER.git"
  },
  "author": "Rikesh Lal Shrestha",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/RikLakhe/MERN-BOILER/issues"
  },
  "homepage": "https://github.com/RikLakhe/MERN-BOILER#readme",
  "devDependencies": {
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "nodemon": "^2.0.2",
    "prettier": "^2.1.2"
  },
  "dependencies": {
    "@sendgrid/mail": "^6.5.3",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "crypto-js": "^3.1.9-1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.5.2",
    "mongoose": "^5.8.9",
    "morgan": "^1.9.1",
    "nodemailer": "^6.4.4",
    "path": "^0.12.7",
    "concurrently": "^5.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./client/src/*.{js,jsx,tsx,json,css,scss,md}": [
      "prettier ---trailing-comma es5 --single-quote --write"
    ]
  }
}
